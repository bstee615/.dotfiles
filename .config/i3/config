# i3-gaps
for_window [class=".*"] border pixel 5
gaps inner 20
exec feh --bg-scale --no-fehbg ~/.bg/bg.png
exec i3-sensible-terminal
exec chromium

# resize with keyboard
set $resize_step 30
bindsym $mod+Ctrl+$left resize shrink width $resize_step px
bindsym $mod+Ctrl+$up resize grow height $resize_step px
bindsym $mod+Ctrl+$down resize shrink height $resize_step px
bindsym $mod+Ctrl+$right resize grow width $resize_step px

# Disable focus following mouse
focus_follows_mouse no

