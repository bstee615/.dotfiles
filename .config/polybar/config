[bar/mybar]
modules-right = backlight pulseaudio battery
modules-left = i3 title
modules-center = date
separator = " | "
; override-redirect = true
; wm-restack = i3
scroll-up = i3wm-wsnext
scroll-down = i3wm-wsprev
fixed-center = true
font-0 = "Noto Sans:size=12;1"
font-1 = "Noto Sans:size=14;1"
background = #E5000000

[module/date]
label-font = 2
type = internal/date
label = %date% %time%
date = %Y-%m-%d%
time = %I:%M:%S

[module/battery]
type = internal/battery
label-charging = CHG %percentage%%
label-discharging = BAT %percentage%%
label-full = FUL %percentage%%
; This is useful in case the battery never reports 100% charge
full-at = 99
battery = BAT0
adapter = ADP1
poll-interval = 5

[module/i3]
type = internal/i3
pin-workspaces = true
strip-wsnumbers = true
index-sort = true
enable-click = false
enable-scroll = false
wrapping-scroll = false
reverse-scroll = false
fuzzy-match = true
label-unfocused = %name%
label-focused = [%name%]
label-focused-foreground = #c860bc
label-separator-padding = 4

[module/pulseaudio]
click-right = pavucontrol &
label-volume = Audio %percentage%%
label-volume-foreground = #c860bc
type = internal/pulseaudio
sink = alsa_output.pci-0000_00_1f.3.analog-stereo
use-ui-max = true
interval = 5
label-muted = Muted
label-muted-foreground = #7a296a

[module/title]
type = internal/xwindow

[module/backlight]
type = internal/backlight
label = Brightness %percentage%%
card = intel_backlight
enable-scroll = true

